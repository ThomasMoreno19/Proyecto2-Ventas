generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Marca {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre      String  @unique
  descripcion String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  deletedAt   DateTime?
  productos Product[]
}

model Linea {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre      String  @unique
  descripcion String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  deletedAt   DateTime?
  productos Product[]
}

model Product {
  id            String        @id @map("_id")
  name          String
  description   String?
  price         Float
  stock         Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
  deletedAt     DateTime?

  marcaId       String
  marca Marca   @relation(fields: [marcaId], references: [id])
  lineaId       String
  linea Linea   @relation(fields: [marcaId], references: [id])
}